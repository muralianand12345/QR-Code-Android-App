<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/QRCode"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="230sp"
        android:src="@drawable/rickroll"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etData"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Enter The Data"
        android:background="@null"
        android:paddingStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/QRCode"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"/>

    <View
        android:id="@+id/viiew1"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@color/purple_700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etData"/>

    <Button
        android:id="@+id/GenerateQRCode"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Generate the QR Code"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/viiew1"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>